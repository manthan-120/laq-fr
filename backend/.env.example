# LAQ RAG System Configuration
# Copy this file to .env and customize as needed
# use cp command to copy to env

# Database Settings
DB_PATH=./laq_db
COLLECTION_NAME=laqs

# Model Settings
LLM_MODEL=mistral
EMBEDDING_MODEL=nomic-embed-text

# Ollama Settings
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=60

# Retrieval Settings
SEARCH_TOP_K=5
CHAT_TOP_K=3
SIMILARITY_THRESHOLD=0.6

# Processing Settings
MARKDOWN_CHUNK_SIZE=20000
METADATA_MAX_LENGTH=500
MAX_CONTEXT_TOKENS=2000

# Performance Optimization Settings
USE_BATCH_EMBEDDINGS=true        # Reserved for future batch API support (not yet implemented)
USE_ENHANCED_CONTEXT=true        # Include metadata in embeddings for better quality
CACHE_MARKDOWN=true              # Cache PDF to markdown conversions
SKIP_DUPLICATE_PDFS=true         # Skip re-processing already uploaded PDFs

# LLM Generation Settings
LLM_TEMPERATURE=0.1
LLM_TOP_P=0.9
